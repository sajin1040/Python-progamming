no_nbread=int(input("enter the number of new bread loaves: "))
no_obread=int(input("enter the number of old bread loaves: "))
regular_price=185
print("regular price is %.2f  " %regular_price)
co_nbread= regular_price*no_nbread
print("cost of new loaves is %.2f " %co_nbread)
discount= regular_price * 0.6
print("discount price for old bread is %.2f " %discount)
co_obread= no_obread * (regular_price- discount)
print("cost of one day old bread is %.2f " %co_obread)
total= co_nbread + co_obread
print( " total amount to be paid is %.2f " %total)
